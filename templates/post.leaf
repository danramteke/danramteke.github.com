#extend("html.leaf"):
#export("body"):
<article class="post" itemscope itemtype="http://schema.org/BlogPosting">

  <header class="post-header">
    <h1 class="post-title" itemprop="name headline">#(current.title)</h1>
    <p class="post-meta">
    <time datetime="#date(current.date)" itemprop="datePublished">#date(current.date, "MMMM d, YYYY")</time>
    </p>
  </header>

  <div class="post-content" itemprop="articleBody">
    #import("content")
  </div>

</article>
#endexport
#endextend
